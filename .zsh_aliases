# File to save custom aliases

# different cd aliases
alias wp='cd ~/Dokumente/Uni/14W/WiPro'
alias uni='cd ~/Dokumente/Uni'
alias pra='cd ~/Dokumente/Uni/14W/Praktikum3'
alias unia='cd ~/Dokumente/Uni/15S'

# handy ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# vim aliases
alias vim='vim --servername VimServer'
alias v='vim --servername VimServer'
alias vima='vim --servername VimServer --remote-tab'

# tmux
alias tmux='TERM=xterm-256color tmux'
alias tp='cd ~/Dokumente/Uni/14W/WiPro && TERM=xterm-256color tmux'
alias tks='tmux kill-server'

# git
alias gitup='cp -r ~/.vim ~/.vimrc ~/.zsh ~/.zshrc ~/.zsh_aliases ~/.tmux.conf ~/.i3 ~/bin ~/.vimperator ~/.vimperatorrc ~/.conkyrc ~/Dokumente/git/dotfiles'

# pacman
alias pacman='sudo pacman'
alias pacro="/usr/bin/pacman -Qtdq > /dev/null && sudo /usr/bin/pacman -Rns \$(/usr/bin/pacman -Qtdq | sed -e ':a;N;\$!ba;s/\n/ /g')"

# usb devices
alias usb='cd /media && ls'

# source files quickly
# zshrc
alias sz='source ~/.zshrc'
# vimrc
alias vv='vim ~/.vimrc'
# tmux.conf
alias vz='vim ~/.zshrc'
alias vt='vim ~/.tmux.conf'
# i3 config
alias vi='vim ~/.i3/config'

# matlab
alias mlint='/usr/local/MATLAB/R2015a/bin/glnxa64/mlint'

# everyone need some fun
alias chuck='fortune ~/bin/fortune/chucknorris | cowsay'
alias help='echo "Dont Panic!"'
alias tor='~/bin/tor-browser_de/start-tor-browser.desktop'
