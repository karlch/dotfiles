! Xresources file
! Transparency
URxvt*.transparent: true
! URxvt*.shading: 0 to 99 darkens, 101 to 200 lightens
! URxvt*.shading: 70
! URxvt*.tintColor: #333366
! Fading non focused windows
URxvt*.fading: 20
! Blur the background
! URxvt.blurRadius: 4

! colors
urxvt*background:  #1C1C1C
urxvt*foreground:  #EEEEEE
URxvt.highlightColor: #00C1FF
! Black
URxvt*color0: #7C7C7C
URxvt*color8: #6C6C6C
! Red
URxvt*color1: #DB3636
URxvt*color9: #B53030
! Green (well, grayish green/blue)
URxvt*color2: #A1E5FC
URxvt*color10: #6CA4BC
! Yellow
URxvt*color3: #E8E861
URxvt*color11: #DDDD45
! Blue
URxvt*color4: #00C1FF
URxvt*color12: #0066AA
! Magenta (well, orange)
URxvt*color5: #FEBE73
URxvt*color13: #FF9900
! Cyan (well blue)
URxvt*color6: #00C1FF
URxvt*color14: #0066AA
! White
URxvt*color7: #EEEEEE
URxvt*color15: #999999

! Font
URxvt.font: xft:Source Code Pro:size=11
! URxvt.letterSpace: -5
! Cursor
URxvt*cursorColor: #96ABB7

! Scrolling
URxvt.scrollBar: false
URxvt.scrollTtyOutput: false
URxvt.scrollTtyKeypress: true
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0
URxvt.keysym.C-M-k: command:\033]720;1\007
URxvt.keysym.C-M-j: command:\033]721;1\007
! Scrollback lines
URxvt.saveLines: 100


! Extensions
URxvt.perl-ext-common: default,matcher,url-picker,font-size,osc-xterm-clipboard
URxvt.perl-ext: default,url-select
! Selectable URLs
URxvt.url-launcher: /usr/bin/qutebrowser
URxvt.matcher.rend.0: Uline fg7
URxvt.keysym.C-b: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/qutebrowser
URxvt.url-select.underline: true
! Catch ugly URL's
URxvt.cutchars: `()'*<>[]{|}"
! Font size on the fly
URxvt.keysym.C-plus:     perl:font-size:increase
URxvt.keysym.C-minus:   perl:font-size:decrease
