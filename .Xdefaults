! Xresources file
! Transparency
! URxvt*.transparent: true
! URxvt*.shading: 0 to 99 darkens, 101 to 200 lightens
! URxvt*.shading: 70
! URxvt*.tintColor: #002244
! Fading non focused windows
! URxvt*.fading: 20
! Blur the background
! URxvt.blurRadius: 4

! colors
urxvt*background:  #0C0C0C
urxvt*foreground:  #EEEEEE
URxvt.highlightColor: #00C1FF
! Black
URxvt*color0: #0C0C0C
URxvt*color8: #7C7C7C
! Red
URxvt*color1: #DB3636
URxvt*color9: #B53030
! Green (bright blue)
URxvt*color2: #005FAF
URxvt*color10: #9DD8F2
! Yellow (brown)
URxvt*color3: #AFAF87
URxvt*color11: #CC9900
! Blue
URxvt*color4: #00C1FF
URxvt*color12: #0066AA
! Magenta
URxvt*color5: #650065
URxvt*color13: #870087
! Cyan (purple)
URxvt*color6: #653DDD
URxvt*color14: #875FFF
! White
URxvt*color7: #EEEEEE
URxvt*color15: #FFFFFF

! Font
URxvt.font: xft:Source Code Pro Medium:size=11

! Cursor
URxvt*cursorColor: #96ABB7
URxvt*cursorColor2: #000000

! Scrolling
URxvt.scrollBar: false
URxvt.scrollTtyOutput: false
URxvt.scrollTtyKeypress: true
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0
URxvt.keysym.C-M-k: command:\033]720;1\007
URxvt.keysym.C-M-j: command:\033]721;1\007
! Scrollback lines (kept small because of tmux)
URxvt.saveLines: 100

! Urgency on bell
URxvt.urgentOnBell: True

! Extensions
URxvt.perl-ext-common: default,matcher,url-picker,font-size,osc-xterm-clipboard
URxvt.perl-ext: default,url-select
! Selectable URLs
URxvt.url-launcher: /usr/bin/qutebrowser --target window
URxvt.url-select.launcher: /usr/bin/qutebrowser --target window
URxvt.matcher.rend.0: Uline fg7
URxvt.keysym.C-b: perl:url-select:select_next
! Catch ugly URL's
URxvt.cutchars: `()'*<>[]{|}"
! Font size on the fly
URxvt.keysym.C-plus:     perl:font-size:increase
URxvt.keysym.C-minus:   perl:font-size:decrease
