conky.config = {
out_to_x = true,
out_to_console = false,
own_window = false,
-- own_window_transparent = true,
-- own_window_type = 'override',
-- own_window_hints = 'below,undecorated,sticky,skip_taskbar,skip_pager',
background = true,
max_text_width = 0,
double_buffer = true,

update_interval = 120,

