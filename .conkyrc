out_to_x yes
own_window no
out_to_console no
background no
max_text_width 0
double_buffer yes

update_interval 120

# This is the number of times Conky will update before quitting.
# Set to zero to run forever.
total_run_times 0

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

# Font stuff
draw_outline no
draw_borders no
use_xft yes
xftalpha 0.0

# Graph and units
default_graph_size 0 25
temperature_unit celsius
format_human_readable true

# Alignment
alignment top_middle
gap_x 20
gap_y 10

TEXT
##################################
${image ~/Bilder/Sonstiges/Pacman-3.png -p 8}\
${font SourceCodePro:style=bold:size=13}${color #ffffff}     ${exec ~/bin/update}     \
${color #00C1FF} TOTAL ${color #ffffff} ${fs_size /}     \
${color #00C1FF} FREE ${color #ffffff} ${fs_free /}     \
${color #00C1FF} KERNEL ${color #ffffff} ${kernel}     \
${color #00C1FF} EDITOR ${color #ffffff} vim     \
${color #00C1FF} SHELL ${color #ffffff} ${execi 12000 echo $SHELL}     \
${color #00C1FF} WM ${color #ffffff} i3     \
${color #00C1FF} WEATHER ${color #ffffff} ${execi 60 ~/bin/weather.sh 'en|de|garching-bei-munchen'}
${exec checkupdates | sed "s/conky//" }
