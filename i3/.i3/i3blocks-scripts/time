#/bin/bash
# vim: ft=sh

show_date() {
    printf '<span foreground="#C594C5">%s  </span>' "ï€—"
    date '+%a %d.%m.%y  %H:%M ' | \
    sed 's/\./<span foreground="#C594C5">.<\/span>/g' | \
    sed 's/\:/<span foreground="#C594C5">:<\/span>/g'
}

case $BLOCK_BUTTON in
    1) st -n floating -g 120x36 -e "calcurse"
esac

show_date
