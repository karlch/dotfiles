# This file has been auto-generated by i3-config-wizard(1).
# It will not be overwritten, so edit it as you like.
#
# Should you change your keyboard layout some time, delete
# this file and re-run i3-config-wizard(1).
#

# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango: Ubuntu Mono 10

# Color Settings
client.focused #00C1FF #00C1FF #ffffff #00C1FF
client.focused_inactive #1C1C1C #1C1C1C #ffffff #1C1C1C
client.unfocused #1C1C1C #1C1C1C #ffffff #1C1C1C
client.urgent #00C1FF #00C1FF #00C1FF #00C1FF

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Enable workspace back and forth
workspace_auto_back_and_forth yes

# everything in modes, lets see if this works
mode "NORMAL" {
    # Window navigation
    bindsym h focus left
    bindsym l focus right
    bindsym j focus down
    bindsym k focus up

    # Kill a window
    bindsym x kill

    # dmenu
    bindsym d exec --no-startup-id i3-dmenu-desktop

    # Move windows
    bindsym Control+h move left
    bindsym Control+j move down
    bindsym Control+k move up
    bindsym Control+l move right

    # split in horizontal orientation
    bindsym s split v

    # split in vertical orientation
    bindsym v split h

    # enter fullscreen mode for the focused container
    bindsym f fullscreen

    # change container layout (stacked, tabbed, toggle split)
    bindsym Shift+n layout stacking
    bindsym Shift+t layout tabbed
    bindsym Shift+s layout toggle split

    # toggle tiling / floating
    bindsym Shift+f floating toggle

    # change focus between tiling / floating windows
    bindsym Shift+z focus mode_toggle

    # focus the parent container
    bindsym p focus parent

    # focus the child container
    bindsym z focus child

    # switch to workspace
    bindsym 1 workspace 1
    bindsym 2 workspace 2
    bindsym 3 workspace 3
    bindsym 4 workspace 4
    bindsym 5 workspace 5
    bindsym 6 workspace 6
    bindsym 7 workspace 7
    bindsym 8 workspace 8
    bindsym 9 workspace 9
    bindsym 0 workspace 10

    # move focused container to workspace
    bindsym Shift+1 move container to workspace 1
    bindsym Shift+2 move container to workspace 2
    bindsym Shift+3 move container to workspace 3
    bindsym Shift+4 move container to workspace 4
    bindsym Shift+5 move container to workspace 5
    bindsym Shift+6 move container to workspace 6
    bindsym Shift+7 move container to workspace 7
    bindsym Shift+8 move container to workspace 8
    bindsym Shift+9 move container to workspace 9
    bindsym Shift+0 move container to workspace 10

    # Intelligent movement with quickswitch.py
    # Get window to current workspace
    bindsym g exec ~/bin/quickswitch/quickswitch.py -m
    # Move window to next empty workspace
    bindsym m exec ~/bin/quickswitch/quickswitch.py -j -e
    # Append it to the next workspace
    bindsym a move container to workspace next; workspace next
    # Insert it to the previous workspace
    bindsym i move container to workspace prev; workspace prev
    # Moving to next/prev workspaces
    bindsym e workspace next
    bindsym b workspace prev
    # Moving back and forth between the last workspace
    bindsym y workspace back_and_forth
    bindsym Shift+y move container to workspace back_and_forth; workspace back_and_forth

    # reload the configuration file
    bindsym r reload mode "default"
    # restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
    bindsym Shift+r restart
    # exit i3 (logs you out of your X session)
    bindsym Shift+x exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

    # Resizing windows
    bindsym Shift+h resize shrink width 10 px or 10 ppt
    bindsym Shift+k resize grow height 10 px or 10 ppt
    bindsym Shift+j resize shrink height 10 px or 10 ppt
    bindsym Shift+l resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym F7 mode "default"

    # Some starters
    bindsym t exec gnome-terminal, mode "default"
    bindsym u exec gnome-terminal -e "tmux -2 new-session -A -s MySession", mode "default"
    bindsym o exec gnome-control-center, mode "default"
    bindsym w exec firefox, mode "default"
    bindsym n exec nautilus --no-desktop, mode "default"

    # Shutdown, reboot, lock screen ..
    bindsym q mode "$system"

    # Trying some vim stuff
    bindsym c exec "i3-msg kill && i3-dmenu-desktop"

    # Make the Rest return
    bindsym Shift+a mode "default"
    bindsym Shift+b mode "default"
    bindsym Shift+c mode "default"
    bindsym Shift+d mode "default"
    bindsym Shift+e mode "default"
    bindsym Shift+f mode "default"
    bindsym Shift+g mode "default"
    bindsym Shift+i mode "default"
    bindsym Shift+m mode "default"
    bindsym Shift+o mode "default"
    bindsym Shift+p mode "default"
    bindsym Shift+q mode "default"
    bindsym Shift+u mode "default"
    bindsym Shift+v mode "default"
    bindsym Shift+w mode "default"
    bindsym Shift+y mode "default"
}

bindsym F7 mode "NORMAL"

set $Locker i3lock && sleep 1

set $SYSTEM System ... logout (l), reboot (r), shutdown (s)

mode "$SYSTEM" {
    bindsym l exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec reboot, mode "default"
    bindsym s exec poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status -c ~/.i3/i3status.conf
        tray_output primary

        colors{
            background #1C1C1C
            statusline #00C1FF
            separator #EEEEEE

            focused_workspace #00C1FF #1C1C1C
            active_workspace #EEEEEE #1C1C1C
            inactive_workspace #EEEEEE #1C1C1C
            urgent_workspace #EEEEEE #1C1C1C
        }
}

# Window borders
new_window pixel 1

# Keyboard delays
exec_always xset r rate 200 40
# Background
exec_always feh --bg-scale ~/Bilder/Hintergrund/Blue_Galaxy.jpg
# The Unity Settings
exec_always gnome-settings-daemon

# Custom launchers
# Firefox
bindsym Mod4+w exec firefox
# Nautilus
bindsym Mod4+n exec nautilus --no-desktop
# Tmux terminal
bindsym Control+Mod1+t exec gnome-terminal -e "tmux -2 new-session -A -s MySession"

# Movements I want systemwide
bindsym Control+Mod1+Right workspace next
bindsym Control+Mod1+Left workspace prev
bindsym Shift+Control+Mod1+Right move container to workspace next; workspace next
bindsym Shift+Control+Mod1+Left move container to workspace prev; workspace prev

# Window Stuff
bindsym Control+q kill
bindsym Control+m fullscreen
