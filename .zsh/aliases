# File to save custom aliases

# different cd aliases
alias wp='cd ~/Dokumente/Uni/14W/WiPro'
alias uni='cd ~/Dokumente/Uni'
alias pra='cd ~/Dokumente/Uni/15W/FoPra'
alias unia='cd ~/Dokumente/Uni/15W'
alias pro='cd ~/Dokumente/Programmieren/'

# vim aliases
alias vims='vim --servername VimServer'
alias vima='vim --servername VimServer --remote-tab'
alias viml='vim -c "normal '\''0"'
alias mma='vim ~/tmp.mma'

# tmux
alias tmux='TERM=xterm-256color tmux'
alias tks='tmux kill-server'
alias tkss='tmux kill-session -t'
alias tls='tmux list-sessions'
alias ta='tmux attach-session -t'

# git
alias gitup='pycp -g ~/.vim ~/.vimrc ~/.zsh ~/.zshrc ~/.tmux.conf ~/.i3 ~/bin ~/.conkyrc ~/.Xdefaults ~/Dokumente/git/dotfiles'
alias gitclean='cd ~/Dokumente/git/dotfiles && rm -rf .vim .vimrc .zsh .zshrc .zsh_aliases .tmux.conf .i3 bin .conkyrc .Xdefaults'
alias gitsync='gitclean && gitup'
alias gitvimiv='cd ~/Dokumente/Programmieren/vimiv && cp vimiv vimivrc.py readme.md LICENSE Makefile vimiv.desktop vimiv.1 ~/Dokumente/git/vimiv && cd ~/Dokumente/git/vimiv'
alias aurvimiv='cd ~/Dokumente/Programmieren/vimiv/AUR && cp PKGBUILD .SRCINFO ~/Dokumente/git/AUR/vimiv-git && cd ~/Dokumente/git/AUR/vimiv-git'

# pacman
alias spac='sudo pacman'
alias pac='pacman'
alias pacro="/usr/bin/pacman -Qtdq > /dev/null && sudo /usr/bin/pacman -Rns \$(/usr/bin/pacman -Qtdq | sed -e ':a;N;\$!ba;s/\n/ /g')"

# usb devices
alias usb='cd /media'

# edit and source files quickly
# zshrc
alias vv='vim ~/.vimrc'
alias sz='source ~/.zshrc'
# zsh aliases/functions
alias va='vim ~/.zsh/aliases'
alias vf='vim ~/.zsh/functions'
# vimrc
alias vz='vim ~/.zshrc'
# tmux.conf
alias vt='vim ~/.tmux.conf'
# i3 config
alias vi='vim ~/.i3/config'

# others
alias mlint='/usr/local/MATLAB/R2015a/bin/glnxa64/mlint'
alias elinks='elinks -no-connect -anonymous'
alias feh='feh -. -B black'
alias ri='rifle'
alias x='exit'
alias csv2latexi='csv2latex --nohead --position c'
alias find='find 2>/dev/null'
alias mkdir='mkdir -p'

# everyone need some fun
alias chuck='clear && fortune ~/bin/fortune/chucknorris | ponysay -F gleamingshield'
alias marvin='fortune ~/bin/fortune/marvin'
alias help='echo "Dont Panic!"'
alias sw='telnet towel.blinkenlights.nl'
alias yt='youtube-viewer -f'
alias emacs='echo haha, nice try! && sleep 1 && vim $@'

# global aliases
alias -g DN='/dev/null'
alias -g NE='2> /dev/null'

alias drink='cd ~/Dokumente/Privat/Drinker/'
